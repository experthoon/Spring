	 <update id="updateOfSawon" parameterType="sdto">
		update sawon set name = #{name}, driver=#{driver}, buseo=#{buseo}
		<if test="photo!=null">
			,photo=#{photo}
		</if>
		where num=#{num}
	</update>
	
	<delete id="deleteOfSawon" parameterType="String"> <!-- 단일 파라미터일 경우 String 사용 -->
		delete from sawon where num = #{num}
	</delete>
	
	
</mapper>